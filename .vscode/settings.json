{
  "files.exclude": {
    "**/__pycache__/": true,
    ".venv": true,
    ".ipynb_checkpoints": true
  },
  "python.pythonPath": ".venv/bin/python3",
  "python.linting.pylintPath": "pylint",
  "python.formatting.provider": "black",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  }
}
